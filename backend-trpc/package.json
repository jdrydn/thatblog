{
  "name": "@thatblog/backend-trpc",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild ./src/handler.ts --bundle --format=cjs --minify --outfile=./dist/api.js --platform=node --target=node20",
    "lint": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:ci": "vitest run --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.767.0",
    "@aws-sdk/lib-dynamodb": "^3.767.0",
    "@aws-sdk/util-dynamodb": "^3.767.0",
    "@trpc/server": "^10.45.2",
    "bcryptjs": "^3.0.2",
    "dataloader": "^2.2.3",
    "electrodb": "^3.4.1",
    "ulid": "^3.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@thatblog/test-dynamodb": "workspace:*",
    "@types/aws-lambda": "^8.10.149",
    "@types/validator": "^13.15.3",
    "@vitest/coverage-v8": "^3.2.4",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "nodemonConfig": {
    "ext": "js, ts",
    "execMap": {
      "js": "node",
      "ts": "tsx"
    },
    "watch": [
      "src/**/*"
    ]
  }
}
