{
  "compilerOptions": {
    //Project Options
    "isolatedModules": true,
    "jsx": "preserve",
    // Strict Checks
    "strict": true,
    // Module Resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    // Linter Checks
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Advanced
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "declaration": false,
    "module": "commonjs",
    "target": "ES2022",
    "allowJs": false,
    "alwaysStrict": true,
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "paths": {
      "@/backend-api/src/*": ["./backend-api/src/*"],
      "@/backend-api/test/*": ["./backend-api/test/*"],
      "@/frontend-admin/src/*": ["./frontend-admin/src/*"],
      "@/frontend-admin/test/*": ["./frontend-admin/test/*"],
      "@/frontend-blog/src/*": ["./frontend-blog/src/*"],
      "@/frontend-blog/test/*": ["./frontend-blog/test/*"]
    }
  },
  "exclude": [ "node_modules/", "**/node_modules/" ]
}
