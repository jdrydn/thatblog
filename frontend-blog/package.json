{
  "name": "@thatblog/frontend-blog",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon dev-server.js",
    "build": "run-s build:*",
    "build:clean": "rimraf ./dist",
    "build:client": "vite build --outDir ./dist/client",
    "build:server": "vite build --ssr ./src/entry-server.tsx --outDir ./dist/server",
    "build:lambda": "esbuild prod-lambda.ts --outfile=./dist/lambda.js --bundle --format=cjs --minify --platform=node --sourcemap=inline --target=node20",
    "preview": "cross-env NODE_ENV=production node dev-server.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "express": "^5.0.1",
    "morgan": "^1.10.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.1"
  }
}
