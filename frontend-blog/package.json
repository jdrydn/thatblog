{
  "name": "@thatblog/frontend-blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild ./src/prod-lambda.ts --bundle --format=cjs --minify --outfile=./dist/blog.js --platform=node --target=node20",
    "dev": "nodemon ./src/dev-server.ts",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@thatblog/backend-trpc": "workspace:*",
    "@thatblog/hyde": "workspace:*",
    "@thatblog/utils": "workspace:*",
    "express": "^4.21.2",
    "html-minifier-terser": "^7.2.0",
    "liquidjs": "^10.20.2",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2"
  },
  "nodemonConfig": {
    "ext": "js, ts",
    "execMap": {
      "js": "node",
      "ts": "tsx"
    },
    "watch": [
      "src/**/*"
    ]
  }
}
